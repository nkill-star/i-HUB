  <script>
    const mainImageContainer = document.getElementById('mainImageContainer');
    const mainImage = document.getElementById('mainImage');
    const zoomLens = document.getElementById('zoomLens');
    const zoomResult = document.getElementById('zoomResult');

    // Change the main image when a thumbnail is clicked
    function changeMainImage(thumbnail) {
      mainImage.src = thumbnail.src;
      zoomResult.style.backgroundImage = `url(${thumbnail.src})`;
      zoomResult.style.backgroundSize = `${mainImage.naturalWidth}px ${mainImage.naturalHeight}px`;
    }

    // Handle mousemove for zoom effect
    mainImageContainer.addEventListener('mousemove', function (e) {
      const bounds = mainImageContainer.getBoundingClientRect();
      const x = e.clientX - bounds.left;
      const y = e.clientY - bounds.top;

      // Ensure the zoom lens size is proportional to the image size and container size
      const lensSize = Math.min(100, bounds.width * 0.2); // 20% of the container width or max 100px
      const lensX = Math.max(0, Math.min(bounds.width - lensSize, x - lensSize / 2));
      const lensY = Math.max(0, Math.min(bounds.height - lensSize, y - lensSize / 2));

      // Set zoom lens position
      zoomLens.style.left = `${lensX}px`;
      zoomLens.style.top = `${lensY}px`;
      zoomLens.style.width = `${lensSize}px`;
      zoomLens.style.height = `${lensSize}px`;

      // Show zoom lens and zoom result
      zoomLens.classList.remove('hidden');
      zoomResult.classList.remove('hidden');

      // Dynamically adjust the zoom effect based on the natural image size
      const bgX = -(lensX / bounds.width) * mainImage.naturalWidth;
      const bgY = -(lensY / bounds.height) * mainImage.naturalHeight;

      // Set the background properties for the zoom result
      zoomResult.style.backgroundPosition = `${bgX}px ${bgY}px`;
      zoomResult.style.backgroundImage = `url(${mainImage.src})`;
      zoomResult.style.backgroundSize = `${mainImage.naturalWidth}px ${mainImage.naturalHeight}px`;
    });

    // Hide zoom lens and result when mouse leaves
    mainImageContainer.addEventListener('mouseleave', function () {
      zoomLens.classList.add('hidden');
      zoomResult.classList.add('hidden');
    });

