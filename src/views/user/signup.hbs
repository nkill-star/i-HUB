    <body class="bg-gray-100 font-sans">
        <!-- Notification Bar -->
        <div class="bg-black text-white text-center py-2">
            <p>Summer Sale For All iPhones And Free Express Delivery - OFF 50% <a href="#"
                    class="text-yellow-300 underline">ShopNow</a></p>
