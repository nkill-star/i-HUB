  <script>
    // Set the end time (for example, 3 days from now)
    const endTime = new Date().getTime() + (3 * 24 * 60 * 60 * 1000); // 3 days from now

    // Update the timer every second
    const countdownInterval = setInterval(() => {
      const now = new Date().getTime();
      const timeRemaining = endTime - now;

      // Calculate days, hours, minutes, and seconds
      const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

      // Format the timer string
      const timerText = `${String(days).padStart(2, '0')}:${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

      // Display the timer in the HTML
      document.getElementById("timer").textContent = timerText;

      // Stop the countdown when time reaches zero
      if (timeRemaining < 0) {
        clearInterval(countdownInterval);
        document.getElementById("timer").textContent = "00:00:00:00";
      }
    }, 1000);
  </script>
